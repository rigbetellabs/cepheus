<?xml version="1.0"?>

<launch>
  <!-- Arguments -->
  <arg name="map_file" default="checkpoint" />
  <arg name="move_forward_only" default="false" />
  <arg name="exploration" default="false" />

  <!-- Map Publishing Node for Exploration-->
  <group if="$(arg exploration)">
    <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
      <rosparam command="load" file="$(find cepheus_slam)/config/gmapping.yaml" />
    </node>
  </group>

  <!-- Map server for Map-based Navigation-->
  <group unless="$(arg exploration)">
    <node pkg="map_server" name="map_server" type="map_server"
      args="$(find cepheus_navigation)/maps/$(arg map_file).yaml" />

    <include file="$(find cepheus_navigation)/launch/amcl.launch"/>
  </group>

  <!-- move_base -->
  <include file="$(find cepheus_navigation)/launch/move_base.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)" />
  </include>

</launch>
